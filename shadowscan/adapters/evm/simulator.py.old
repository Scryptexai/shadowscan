@dataclass 
class SimulationResult:
    success: bool
    transaction_hash: Optional[str] = None
    state_diff: Optional[Dict[str, Any]] = None
    trace: Optional[Dict[str, Any]] = None
    events: Optional[List[Dict[str, Any]]] = None
