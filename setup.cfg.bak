[metadata]
name = shadowscan
version = attr: shadowscan.__version__
author = Ghost Attacker
author_email = ghost@attacker.dev
description = Advanced Security Scanning Framework for Web Applications and Blockchain
long_description = file: README.md
long_description_content_type = text/markdown
url = https://github.com/ghostattacker/shadowscan
project_urls =
    Bug Tracker = https://github.com/ghostattacker/shadowscan/issues
    Documentation = https://shadowscan.readthedocs.io/
    Source Code = https://github.com/ghostattacker/shadowscan
classifiers =
    Development Status :: 4 - Beta
    Environment :: Console
    Intended Audience :: Developers
    Intended Audience :: Information Technology
    License :: OSI Approved :: MIT License
    Operating System :: OS Independent
    Programming Language :: Python :: 3
    Programming Language :: Python :: 3.8
    Programming Language :: Python :: 3.9
    Programming Language :: Python :: 3.10
    Programming Language :: Python :: 3.11
    Programming Language :: Python :: 3.12
    Topic :: Security
    Topic :: Internet :: WWW/HTTP
    Topic :: Software Development :: Testing
    Topic :: System :: Networking :: Monitoring
license = MIT
license_file = LICENSE
keywords = security, scanning, vulnerability, blockchain, web, penetration-testing

[options]
zip_safe = False
packages = find:
python_requires = >=3.8
include_package_data = True
install_requires =
    requests>=2.31.0
    click>=8.1.0
    colorama>=0.4.6
    rich>=13.0.0
    pydantic>=2.0.0
    web3>=6.0.0
    aiohttp>=3.8.0
    asyncio-throttle>=1.0.2
    python-dotenv>=1.0.0
    PyYAML>=6.0
    sqlparse>=0.4.4
    beautifulsoup4>=4.12.0
    lxml>=4.9.0
    selenium>=4.15.0
    httpx>=0.25.0
    cryptography>=41.0.0
    eth-abi>=4.0.0
    eth-utils>=2.3.0
    py-solc-x>=1.12.0
    tenacity>=8.2.0
    tqdm>=4.66.0
    tabulate>=0.9.0
    jinja2>=3.1.0
    marshmallow>=3.20.0
    jsonschema>=4.17.0

[options.packages.find]
where = .
include = shadowscan*
exclude = 
    tests*
    docs*
    *.egg-info

[options.package_data]
shadowscan = 
    config/*.yaml
    config/*.yml
    config/*.json
    templates/*.html
    templates/*.j2
    static/*
    data/*

[options.extras_require]
dev = 
    pytest>=7.4.0
    pytest-cov>=4.1.0
    pytest-asyncio>=0.21.0
    pytest-mock>=3.11.0
    black>=23.7.0
    isort>=5.12.0
    flake8>=6.0.0
    mypy>=1.5.0
    pre-commit>=3.3.0
    tox>=4.6.0
    coverage>=7.2.0
    bandit>=1.7.5
    safety>=2.3.0
docs = 
    sphinx>=7.1.0
    sphinx-rtd-theme>=1.3.0
    myst-parser>=2.0.0
    sphinx-click>=5.0.0
blockchain = 
    eth-brownie>=1.20.0
    mythril>=0.24.0
    manticore>=0.3.7
web = 
    playwright>=1.37.0
    scrapy>=2.11.0
    wapiti3>=3.1.7
all = 
    shadowscan[dev,docs,blockchain,web]

[options.entry_points]
console_scripts =
    shadowscan = shadowscan.cli:main
    shadowscan-web = shadowscan.modules.web:main
    shadowscan-blockchain = shadowscan.modules.blockchain:main

shadowscan.modules =
    web = shadowscan.modules.web
    blockchain = shadowscan.modules.blockchain
    base = shadowscan.modules.base

[bdist_wheel]
universal = 0

[sdist]
formats = gztar

[egg_info]
tag_build = 
tag_date = 0

# Flake8 Configuration
[flake8]
max-line-length = 88
extend-ignore = E203, E266, E501, W503, F403, F401
max-complexity = 18
select = B,C,E,F,W,T4,B9
exclude = 
    .git,
    __pycache__,
    .tox,
    .eggs,
    *.egg,
    build,
    dist,
    venv,
    env,
    .venv,
    docs,
    tests/fixtures/*,
per-file-ignores =
    __init__.py:F401
    */tests/*:B011

# Coverage Configuration
[coverage:run]
source = shadowscan
branch = True
omit = 
    */tests/*
    */test_*
    */__pycache__/*
    */venv/*
    */env/*
    setup.py

[coverage:report]
exclude_lines =
    pragma: no cover
    def __repr__
    if self.debug:
    if settings.DEBUG
    raise AssertionError
    raise NotImplementedError
    if 0:
    if __name__ == .__main__.:
    class .*\bProtocol\):
    @(abc\.)?abstractmethod
ignore_errors = True
precision = 2
show_missing = True

[coverage:html]
directory = htmlcov

[coverage:xml]
output = coverage.xml

# Tool Configuration
[tool:pytest]
minversion = 6.0
addopts = 
    -ra
    -q
    --strict-markers
    --strict-config
    --cov=shadowscan
    --cov-report=term-missing
    --cov-report=html
    --cov-report=xml
    --tb=short
testpaths = tests
python_files = test_*.py *_test.py
python_classes = Test*
python_functions = test_*
markers =
    slow: marks tests as slow (deselect with '-m "not slow"')
    integration: marks tests as integration tests
    unit: marks tests as unit tests
    blockchain: marks tests as blockchain related
    web: marks tests as web related
    requires_network: marks tests that require network access
filterwarnings =
    error
    ignore::UserWarning
    ignore::DeprecationWarning

# MyPy Configuration
[mypy]
python_version = 3.8
warn_return_any = True
warn_unused_configs = True
disallow_untyped_defs = True
disallow_incomplete_defs = True
check_untyped_defs = True
disallow_untyped_decorators = True
no_implicit_optional = True
warn_redundant_casts = True
warn_unused_ignores = True
warn_no_return = True
warn_unreachable = True
strict_equality = True
pretty = True
show_column_numbers = True
show_error_context = True
show_error_codes = True

[mypy-web3.*]
ignore_missing_imports = True

[mypy-eth_abi.*]
ignore_missing_imports = True

[mypy-eth_utils.*]
ignore_missing_imports = True

[mypy-solcx.*]
ignore_missing_imports = True

[mypy-slither.*]
ignore_missing_imports = True

[mypy-bandit.*]
ignore_missing_imports = True

[mypy-selenium.*]
ignore_missing_imports = True

[mypy-bs4.*]
ignore_missing_imports = True

# Bandit Security Configuration
[bandit]
exclude_dirs = tests,venv,env,.venv,.git,__pycache__,build,dist
skips = B101,B601,B602,B608
confidence = medium
severity = medium

# isort Configuration
[isort]
profile = black
multi_line_output = 3
line_length = 88
include_trailing_comma = True
force_grid_wrap = 0
use_parentheses = True
ensure_newline_before_comments = True
known_first_party = shadowscan
known_third_party = 
    click,
    requests,
    web3,
    pydantic,
    rich,
    colorama,
    aiohttp,
    yaml,
    dotenv,
    selenium,
    bs4,
    cryptography
sections = FUTURE,STDLIB,THIRDPARTY,FIRSTPARTY,LOCALFOLDER
default_section = THIRDPARTY
force_sort_within_sections = True
show_diff = True
skip_glob = 
    */migrations/*
    */venv/*
    */env/*
    */.venv/*
